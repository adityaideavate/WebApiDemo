            <div class="col-md-10">
                @Html.EditorFor(model => model.screen.ScreenCapacity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.screen.ScreenCapacity, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" id="NewScreen1IdBtnId"/>
