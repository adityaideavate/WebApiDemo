@model BookMyTicket.ViewModel.TheatreViewModel

@{
    ViewBag.Title = "SelectCity"; 
}



@using (Html.BeginForm("NewScreen", "Show"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Select City</h2> 
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

        <div class="form-group">
            @Html.LabelFor(model => model.theatre.CityId, "CityId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.theatre.CityId, new SelectList(Model.cityList, "CityId", "CityName"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.theatre.CityId, "", new { @class = "text-danger" })
            </div>
        </div>
        
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proceed" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
